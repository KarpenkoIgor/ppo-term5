<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="40sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/ActionButtonHor"
                android:id="@+id/btn_AC"
                android:text="AC"
                />
            <TextView
                style="@style/ActionButtonHor"
                android:textSize="30sp"
                android:id="@+id/btn_back"
                android:text="-->"
                />
            <TextView
                style="@style/ActionButtonHor"
                android:id="@+id/btn_proc"
                android:text="%"
                />
            <TextView
                style="@style/ActionButtonHor"
                android:id="@+id/btn_div"
                android:text="รท"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/NumberButtonHor"
                android:id="@+id/btn_7"
                android:text="7"
                />
            <TextView
                style="@style/NumberButtonHor"
                android:id="@+id/btn_8"
                android:text="8"
                />
            <TextView
                style="@style/NumberButtonHor"
                android:id="@+id/btn_9"
                android:text="9"
                />
            <TextView
                style="@style/ActionButtonHor"
                android:id="@+id/btn_mul"
                android:text="ร"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/NumberButtonHor"
                android:id="@+id/btn_4"
                android:text="4"
                />
            <TextView
                style="@style/NumberButtonHor"
                android:id="@+id/btn_5"
                android:text="5"
                />
            <TextView
                style="@style/NumberButtonHor"
                android:id="@+id/btn_6"
                android:text="6"
                />
            <TextView
                style="@style/ActionButtonHor"
                android:id="@+id/btn_sub"
                android:text="-"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/NumberButtonHor"
                android:id="@+id/btn_1"
                android:text="1"
                />
            <TextView
                style="@style/NumberButtonHor"
                android:id="@+id/btn_2"
                android:text="2"
                />
            <TextView
                style="@style/NumberButtonHor"
                android:id="@+id/btn_3"
                android:text="3"
                />
            <TextView
                style="@style/ActionButtonHor"
                android:id="@+id/btn_add"
                android:text="+"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/ActionButtonHor"
                android:id="@+id/btn_change"
                android:text="CM"
                />
            <TextView
                style="@style/NumberButtonHor"
                android:id="@+id/btn_0"
                android:text="0"
                />
            <TextView
                style="@style/NumberButtonHor"
                android:id="@+id/btn_dot"
                android:text="."
                />
            <TextView
                style="@style/ActionButtonHor"
                android:id="@+id/btn_eq"
                android:text="="
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>